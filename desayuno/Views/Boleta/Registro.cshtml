<script>
        class WizardForm {
            constructor() {
                this.currentStep = 1;
                this.totalSteps = 4;
                this.init();
            }

            init() {
                this.bindEvents();
                this.showStep(1);
            }

            bindEvents() {
                // Next buttons
                document.querySelectorAll('.next-btn').forEach(btn => {
                    btn.addEventListener('click', () => this.nextStep());
                });

                // Previous buttons
                document.querySelectorAll('.prev-btn').forEach(btn => {
                    btn.addEventListener('click', () => this.prevStep());
                });

                
            }

            validateStep(step) {
                const stepElement = document.getElementById(`step-${step}`);
                const inputs = stepElement.querySelectorAll('input[required], select[required]');
                let isValid = true;

                // Clear previous errors
                stepElement.querySelectorAll('.error-message').forEach(msg => {
                    msg.classList.add('hidden');
                });
                stepElement.querySelectorAll('input, select').forEach(input => {
                    input.classList.remove('border-red-500');
                });

                inputs.forEach(input => {
                    if (!input.value.trim()) {
                        isValid = false;
                        input.classList.add('border-red-500');
                        const errorMsg = input.parentElement.querySelector('.error-message');
                        if (errorMsg) {
                            errorMsg.classList.remove('hidden');
                        }
                    }
                });

                return isValid;
            }

            nextStep() {
                if (this.validateStep(this.currentStep) && this.currentStep < this.totalSteps) {
                    this.currentStep++;
                    this.showStep(this.currentStep);
                }
            }

            prevStep() {
                if (this.currentStep > 1) {
                    this.currentStep--;
                    this.showStep(this.currentStep);
                }
            }

            showStep(step) {
                // Hide all steps
                document.querySelectorAll('.step-content').forEach(content => {
                    content.classList.add('hidden');
                });

                // Show current step
                document.getElementById(`step-${step}`).classList.remove('hidden');

                // Update step indicators
                for (let i = 1; i <= this.totalSteps; i++) {
                    const indicator = document.getElementById(`step-indicator-${i}`);
                    const stepText = indicator.nextElementSibling;
                    
                    if (i <= step) {
                        indicator.classList.remove('bg-gray-300', 'text-gray-500');
                        indicator.classList.add('bg-primary-600', 'text-white');
                        stepText.classList.remove('text-gray-500');
                        stepText.classList.add('text-gray-900');
                    } else {
                        indicator.classList.remove('bg-primary-600', 'text-white');
                        indicator.classList.add('bg-gray-300', 'text-gray-500');
                        stepText.classList.remove('text-gray-900');
                        stepText.classList.add('text-gray-500');
                    }
                }
            }

    
            
        }

        // Initialize the wizard when DOM is loaded
        document.addEventListener('DOMContentLoaded', () => {
            new WizardForm();
        });
    </script>

