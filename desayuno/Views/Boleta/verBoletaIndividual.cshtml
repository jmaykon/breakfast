<div class="container mx-auto px-4 py-6 max-w-7xl">
    <!-- Header -->
    <div class="bg-slate-800 rounded-lg p-6 shadow-md border border-slate-700 mb-6">
        <div class="flex items-center justify-between">
            <div class="flex items-center space-x-4">
                <button onclick="history.back()"
                        class="p-3 bg-slate-700 hover:bg-slate-600 text-slate-300 rounded-lg border border-slate-600 transition-colors">
                    <i class="fas fa-arrow-left"></i>
                </button>
                <div class="flex items-center space-x-3">
                    <div class="p-3 bg-blue-600/20 rounded-lg border border-blue-500/30">
                        <i class="fas fa-list-alt text-blue-400 text-xl"></i>
                    </div>
                    <div>
                        <h1 class="text-2xl font-bold text-white">Boletas de Carga #<span id="nroCargaDisplay">@ViewBag.NroCarga</span></h1>
                        <p class="text-slate-300 text-sm">Gestiona las boletas individuales de esta carga</p>
                    </div>
                </div>
            </div>

            <!-- Acciones Globales -->
            <div class="flex w-[20%]">
                <div class="bg-slate-800 rounded-lg p-4 border border-slate-700 w-[100%]">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-slate-400 text-sm">Total Boletas</p>
                            <p class="text-2xl font-bold text-white" id="totalBoletas">0</p>
                        </div>
                        <div class="p-3 bg-blue-600/20 rounded-lg border border-blue-500/30">
                            <i class="fas fa-receipt text-blue-400 text-xl"></i>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
    </div>


    <!-- Loading State -->
    <div id="loadingState" class="text-center py-12">
        <div class="bg-slate-800 rounded-xl p-8 border border-slate-700">
            <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-500 mx-auto mb-4"></div>
            <p class="text-slate-300">Cargando boletas...</p>
        </div>
    </div>

    <!-- Container de Boletas -->
    <div id="boletas-individuales-container" class="hidden">
        <div class="bg-slate-800 rounded-lg border border-slate-700 overflow-hidden">
            <!-- Header de la tabla -->
            <div class="bg-slate-700 px-6 py-4 border-b border-slate-600">
                <h3 class="text-lg font-semibold text-white flex items-center">
                    <i class="fas fa-list mr-3 text-blue-400"></i>
                    Lista de Boletas
                </h3>
            </div>

            <!-- Tabla -->
            <div class="overflow-x-auto">
                <table class="w-full text-sm text-left text-slate-300">
                    <thead class="text-xs text-slate-400 uppercase bg-slate-700 border-b border-slate-600">
                        <tr>
                            <th scope="col" class="px-6 py-4 font-medium">#</th>
                            <th scope="col" class="px-6 py-4 font-medium">Número Boleta</th>
                            
                            <th scope="col" class="px-6 py-4 font-medium">Repeticiones</th>
                            <th scope="col" class="px-6 py-4 font-medium text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="boletas-tabla-body" class="divide-y divide-slate-700">
                        <!-- Content will be loaded dynamically -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Empty State -->
    <div id="emptyState" class="hidden text-center py-12">
        <div class="bg-slate-800 rounded-xl p-8 border border-slate-700">
            <i class="fas fa-inbox text-slate-500 text-4xl mb-4"></i>
            <h3 class="text-lg font-semibold text-slate-300 mb-2">No hay boletas</h3>
            <p class="text-slate-400 mb-6">Esta carga no tiene boletas asociadas</p>
            <a asp-controller="Boleta" asp-action="Index"
               class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700 focus:ring-4 focus:ring-blue-500/30 transition-colors">
                <i class="fas fa-arrow-left mr-2"></i>
                Volver a Cargas
            </a>
        </div>
    </div>

    <!-- Error State -->
    <div id="errorState" class="hidden text-center py-12">
        <div class="bg-red-900/50 border border-red-800 rounded-xl p-8">
            <i class="fas fa-exclamation-triangle text-red-400 text-4xl mb-4"></i>
            <h3 class="text-lg font-semibold text-red-300 mb-2">Error al cargar los datos</h3>
            <p class="text-red-400 mb-6">No se pudieron obtener las boletas del servidor</p>
            <button onclick="cargarBoletasIndividuales()"
                    class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-red-600 rounded-lg hover:bg-red-700 focus:ring-4 focus:ring-red-500/30 transition-colors">
                <i class="fas fa-redo mr-2"></i>
                Reintentar
            </button>
        </div>
    </div>
</div>
<!-- Modal Editar Boleta Individual -->
<div id="editarBoletaIndividualModal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-2xl max-h-full">
        <div class="relative bg-gray-800 rounded-lg shadow-2xl border border-gray-700">
            <!-- Modal header -->
            <div class="flex items-center justify-between p-4 md:p-5 border-b border-gray-600 rounded-t">
                <h3 class="text-lg font-semibold text-white flex items-center">
                    <i class="fas fa-list-alt mr-3 text-blue-400"></i>
                    Lista de Productos Cargados
                </h3>
                <button type="button"
                        class="text-gray-400 bg-transparent hover:bg-gray-600 hover:text-white rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center transition-colors"
                        onclick="cerrarModalBoleta()">
                    <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
                    </svg>
                    <span class="sr-only">Cerrar modal</span>
                </button>
            </div>

            <!-- Modal body -->
            <div class="p-4 md:p-5">
                <div class="overflow-x-auto">
                    <table class="w-full text-sm text-left text-gray-300">
                        <thead class="text-xs text-gray-400 uppercase bg-gray-700">
                            <tr>
                                <th scope="col" class="px-6 py-3 rounded-l-lg">
                                    <i class="fas fa-barcode mr-2 text-blue-400"></i>
                                    Cod Producto
                                </th>
                                <th scope="col" class="px-6 py-3 rounded-r-lg">
                                    <i class="fas fa-sort-numeric-up mr-2 text-blue-400"></i>
                                    Cantidad
                                </th>
                            </tr>
                        </thead>
                        <tbody id="tablaProductosBody" class="divide-y divide-gray-600">
                            <tr>
                                <td colspan="2" class="text-center py-8 text-gray-400">
                                    <i class="fas fa-spinner fa-spin text-2xl mb-2"></i>
                                    <br>
                                    Cargando productos...
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Modal footer -->
            <div class="flex justify-end gap-3 p-4 md:p-5 border-t border-gray-600">
                <button type="button"
                        onclick="cerrarModalBoleta()"
                        class="py-2.5 px-5 text-sm font-medium text-gray-300 focus:outline-none bg-gray-700 rounded-lg border border-gray-600 hover:bg-gray-600 hover:text-white focus:z-10 focus:ring-4 focus:ring-gray-700 transition-colors">
                    <i class="fas fa-times mr-2"></i>
                    Cerrar
                </button>
                <button type="button"
                        onclick="actualizarCantidades()"
                        class="text-white inline-flex items-center bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center transition-colors">
                    <i class="fas fa-save mr-2"></i>
                    Guardar
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Hidden Input -->
<input type="hidden" id="nroCargaActual" value="@ViewBag.NroCarga" />

<!-- Scripts -->
<script src="~/js/pages/boletaIndividual.js"></script>