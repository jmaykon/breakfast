@model desayuno.Models.Cliente
@{
}
<!-- Contenido Principal -->
<div class="space-y-6">
    <!-- Header con título -->
    <div class="bg-gray-800 rounded-xl p-6 shadow-2xl border border-gray-700">
        <div class="flex items-center justify-between">
            <div class="flex items-center space-x-3">
                <div class="p-3 bg-blue-600 rounded-lg">
                    <i class="fas fa-user-friends text-white text-xl"></i>
                </div>
                <div>
                    <h1 class="text-2xl font-bold text-white">Gestión de Clientes</h1>
                    <p class="text-gray-400 text-sm">Administra los clientes del sistema</p>
                </div>
            </div>

            <!-- Botón Agregar Cliente -->
            <button id="btnNuevoCliente"
                    type="button"
                    class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-lg hover:bg-blue-700 focus:z-10 focus:ring-4 focus:ring-blue-300 transition-all duration-200 hover:scale-105 hover:shadow-lg">
                <i class="fas fa-plus mr-2"></i>
                Nuevo Cliente
            </button>
        </div>
    </div>

    <!-- Tabla de Clientes -->
    <div class="bg-gray-800 rounded-xl shadow-2xl border border-gray-700 overflow-hidden">
        <div class="p-6">
            <table class="w-full text-xs text-left" id="tblCliente">
                <thead>
                    <tr>
                        
                        <th scope="col">Código Cliente</th>
                        <th scope="col">Detalle Cliente</th>
                        <th scope="col">Código Ciudad</th>
                        <th scope="col">Tipo</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td colspan="6" class="text-center py-8 text-gray-400">
                            <i class="fas fa-spinner fa-spin text-2xl mb-2"></i>
                            <br>
                            Cargando datos...
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal Agregar/Editar Cliente -->
<div id="modalRegistroCliente" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-md max-h-full">
        <div class="relative bg-gray-800 rounded-lg shadow-2xl border border-gray-700">
            <!-- Modal header -->
            <div class="flex items-center justify-between p-4 md:p-5 border-b border-gray-600 rounded-t">
                <h3 id="titleModalCliente" class="text-lg font-semibold text-white">
                    Nuevo Cliente
                </h3>
                <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-600 hover:text-white rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center transition-colors" onclick="cerrarModal()">
                    <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
                    </svg>
                    <span class="sr-only">Cerrar modal</span>
                </button>
            </div>

            <!-- Modal body -->
            <form id="formularioCliente" class="p-4 md:p-5">
                <input type="hidden" id="id" name="id">

                <div class="grid gap-4 mb-4 grid-cols-1">
                    <!-- Detalle Cliente -->
                    <div>
                        <label for="DetalleCliente" class="block mb-2 text-sm font-medium text-white">
                            <i class="fas fa-user mr-2 text-blue-400"></i>Detalle Cliente *
                        </label>
                        <input type="text" name="DetalleCliente" id="DetalleCliente" class="bg-gray-700 border border-gray-600 text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 placeholder-gray-400 transition-colors" placeholder="Ingrese el detalle del cliente" required="">
                    </div>

                    <!-- Código Cliente -->
                    <div>
                        <label for="CodCliente" class="block mb-2 text-sm font-medium text-white">
                            <i class="fas fa-barcode mr-2 text-blue-400"></i>Código Cliente *
                        </label>
                        <input type="text" name="CodCliente" id="CodCliente" class="bg-gray-700 border border-gray-600 text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 placeholder-gray-400 transition-colors" placeholder="Ingrese el código del cliente" required="">
                    </div>

                    <!-- Código Ciudad -->
                    <div>
                        <label for="CodCiudad" class="block mb-2 text-sm font-medium text-white">
                            <i class="fas fa-map-marker-alt mr-2 text-blue-400"></i>Código Ciudad *
                        </label>
                        <select class="select-cliente-ciudad" id="CodCiudad" name="CodCiudad" tabindex="-1" style="width: 100%; display:inline" required>
                            <option value=""></option>
                        </select>
                    </div>

                    <!-- Tipo -->
                    <div>
                        <label for="Tipo" class="block mb-2 text-sm font-medium text-white">
                            <i class="fas fa-tag mr-2 text-blue-400"></i>Tipo *
                        </label>
                        <input type="text" name="Tipo" id="Tipo" class="bg-gray-700 border border-gray-600 text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 placeholder-gray-400 transition-colors" placeholder="Ingrese el tipo de cliente" required="">
                    </div>
                </div>

                <!-- Botones del modal -->
                <div class="flex justify-end gap-3">
                    <button type="button" onclick="cerrarModal()" class="py-2.5 px-5 text-sm font-medium text-gray-300 focus:outline-none bg-gray-700 rounded-lg border border-gray-600 hover:bg-gray-600 hover:text-white focus:z-10 focus:ring-4 focus:ring-gray-700 transition-colors">
                        <i class="fas fa-times mr-2"></i>Cancelar
                    </button>
                    <button type="submit" class="text-white inline-flex items-center bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center transition-colors">
                        <i class="fas fa-save mr-2"></i>Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/js/pages/cliente.js"></script>