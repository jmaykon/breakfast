@model desayuno.Models.Unidad
@{
}


<!-- Contenido Principal -->
<div class="space-y-6">
    <!-- Header con título -->
    <div class="bg-gray-800 rounded-xl p-6 shadow-2xl border border-gray-700">
        <div class="flex items-center justify-between">
            <div class="flex items-center space-x-3">
                <div class="p-3 bg-blue-600 rounded-lg">
                    <i class="fas fa-building text-white text-xl"></i>
                </div>
                <div>
                    <h1 class="text-2xl font-bold text-white">Gestión de Unidades</h1>
                    <p class="text-gray-400 text-sm">Administra las unidades del sistema</p>
                </div>
            </div>

            <!-- Grupo de botones -->
            <div class="flex items-center space-x-3">
                <!-- Botón Nueva Unidad -->
                <button id="btnNuevaUnidad"
                        type="button"
                        class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-lg hover:bg-blue-700 focus:z-10 focus:ring-4 focus:ring-blue-300 transition-all duration-200 hover:scale-105 hover:shadow-lg">
                    <i class="fas fa-plus mr-2"></i>
                    Nueva Unidad
                </button>

                <!-- Botón Cargar Excel -->
                <a asp-controller="Unidad" asp-action="CargarExcel"
                   class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-green-600 border border-transparent rounded-lg hover:bg-green-700 focus:z-10 focus:ring-4 focus:ring-green-300 transition-all duration-200 hover:scale-105 hover:shadow-lg">
                    <i class="fas fa-file-excel mr-2"></i>
                    Cargar Excel
                </a>
            </div>
        </div>
    </div>

    <!-- Tabla de Unidades -->
    <div class="bg-gray-800 rounded-xl shadow-2xl border border-gray-700 overflow-hidden">
        <div class="p-6">
            <table class="w-full text-xs text-left" id="tblUnidad">
                <thead>
                    <tr>
                        <th scope="col">Código</th>
                        <th scope="col">Descripción</th>
                        <th scope="col">Raciones</th>
                        <th scope="col">Dirección</th>
                        <th scope="col">Turno</th>
                        <th scope="col">Cod Distrito</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td colspan="8" class="text-center py-8 text-gray-400">
                            <i class="fas fa-spinner fa-spin text-2xl mb-2"></i>
                            <br>
                            Cargando datos...
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal Agregar/Editar Unidad -->
<div id="modalRegistroUnidad" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-4xl max-h-full">
        <div class="relative bg-gray-800 rounded-lg shadow-2xl border border-gray-700">
            <!-- Modal header -->
            <div class="flex items-center justify-between p-4 md:p-5 border-b border-gray-600 rounded-t">
                <h3 id="titleModalUnidad" class="text-lg font-semibold text-white">
                    Nueva Unidad
                </h3>
                <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-600 hover:text-white rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center transition-colors" onclick="cerrarModal()">
                    <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
                    </svg>
                    <span class="sr-only">Cerrar modal</span>
                </button>
            </div>

            <!-- Modal body -->
            <form id="formularioUnidad" class="p-4 md:p-5">
                <input type="hidden" id="id" name="id">

                <div class="grid gap-4 mb-4">
                    <!-- Primera fila -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <!-- Código -->
                        <div>
                            <label for="Codigo" class="block mb-2 text-sm font-medium text-white">
                                <i class="fas fa-barcode mr-2 text-blue-400"></i>Código *
                            </label>
                            <input type="text" name="Codigo" id="Codigo" class="bg-gray-700 border border-gray-600 text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 placeholder-gray-400 transition-colors" placeholder="Ingrese el código" required="">
                        </div>

                        <!-- Descripción -->
                        <div>
                            <label for="Descripcion" class="block mb-2 text-sm font-medium text-white">
                                <i class="fas fa-align-left mr-2 text-blue-400"></i>Descripción *
                            </label>
                            <input type="text" name="Descripcion" id="Descripcion" class="bg-gray-700 border border-gray-600 text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 placeholder-gray-400 transition-colors" placeholder="Ingrese la descripción" required="">
                        </div>
                    </div>

                    <!-- Segunda fila -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <!-- Raciones -->
                        <div>
                            <label for="Raciones" class="block mb-2 text-sm font-medium text-white">
                                <i class="fas fa-utensils mr-2 text-blue-400"></i>Raciones *
                            </label>
                            <input type="number" name="Raciones" id="Raciones" class="bg-gray-700 border border-gray-600 text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 placeholder-gray-400 transition-colors" placeholder="Cantidad de raciones" required="">
                        </div>

                        <!-- Dirección -->
                        <div>
                            <label for="Direccion" class="block mb-2 text-sm font-medium text-white">
                                <i class="fas fa-map-marker-alt mr-2 text-blue-400"></i>Dirección *
                            </label>
                            <input type="text" name="Direccion" id="Direccion" class="bg-gray-700 border border-gray-600 text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 placeholder-gray-400 transition-colors" placeholder="Ingrese la dirección" required="">
                        </div>
                    </div>

                    <!-- Tercera fila -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <!-- Turno -->
                        <div>
                            <label for="Turno" class="block mb-2 text-sm font-medium text-white">
                                <i class="fas fa-clock mr-2 text-blue-400"></i>Turno *
                            </label>
                            <input type="text" name="Turno" id="Turno" class="bg-gray-700 border border-gray-600 text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 placeholder-gray-400 transition-colors" placeholder="Ingrese el turno" required="">
                        </div>

                        <!-- Responsable -->
                        <div>
                            <label for="Responzable" class="block mb-2 text-sm font-medium text-white">
                                <i class="fas fa-user mr-2 text-blue-400"></i>Responsable *
                            </label>
                            <input type="text" name="Responzable" id="Responzable" class="bg-gray-700 border border-gray-600 text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 placeholder-gray-400 transition-colors" placeholder="Ingrese el responsable" required="">
                        </div>
                    </div>

                    <!-- Cuarta fila -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <!-- Código Distrito -->
                        <div>
                            <label for="codDistrito" class="block mb-2 text-sm font-medium text-white">
                                <i class="fas fa-map mr-2 text-blue-400"></i>Código Distrito *
                            </label>
                            <select class="select-unidad-distrito" id="codDistrito" name="codDistrito" tabindex="-1" style="width: 100%; display:inline" required>
                                <option value=""></option>
                            </select>
                        </div>

                        <!-- Teléfono -->
                        <div>
                            <label for="Telefono" class="block mb-2 text-sm font-medium text-white">
                                <i class="fas fa-phone mr-2 text-blue-400"></i>Teléfono *
                            </label>
                            <input type="text" name="Telefono" id="Telefono" class="bg-gray-700 border border-gray-600 text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 placeholder-gray-400 transition-colors" placeholder="Ingrese el teléfono" required="">
                        </div>
                    </div>

                    <!-- Quinta fila -->
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                        <!-- Distrito -->
                        <div>
                            <label for="Distrito" class="block mb-2 text-sm font-medium text-white">
                                <i class="fas fa-city mr-2 text-blue-400"></i>Distrito *
                            </label>
                            <input type="text" name="Distrito" id="Distrito" class="bg-gray-700 border border-gray-600 text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 placeholder-gray-400 transition-colors" placeholder="Distrito" required="" readonly>
                        </div>

                        <!-- Código Ciudad -->
                        <div>
                            <label for="IdCiudad" class="block mb-2 text-sm font-medium text-white">
                                <i class="fas fa-hashtag mr-2 text-blue-400"></i>Código Ciudad *
                            </label>
                            <input type="text" name="IdCiudad" id="IdCiudad" class="bg-gray-700 border border-gray-600 text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 placeholder-gray-400 transition-colors" placeholder="Código ciudad" required="" readonly>
                        </div>

                        <!-- Ciudad -->
                        <div>
                            <label for="ciudad" class="block mb-2 text-sm font-medium text-white">
                                <i class="fas fa-building mr-2 text-blue-400"></i>Ciudad *
                            </label>
                            <input type="text" name="ciudad" id="ciudad" class="bg-gray-700 border border-gray-600 text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 placeholder-gray-400 transition-colors" placeholder="Ciudad" required="" readonly>
                        </div>
                    </div>

                    <!-- Sexta fila -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <!-- Nivel -->
                        <div>
                            <label for="Nivel" class="block mb-2 text-sm font-medium text-white">
                                <i class="fas fa-layer-group mr-2 text-blue-400"></i>Nivel *
                            </label>
                            <input type="text" name="Nivel" id="Nivel" class="bg-gray-700 border border-gray-600 text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 placeholder-gray-400 transition-colors" placeholder="Ingrese el nivel" required="">
                        </div>

                        <!-- Ruta -->
                        <div>
                            <label for="Ruta" class="block mb-2 text-sm font-medium text-white">
                                <i class="fas fa-route mr-2 text-blue-400"></i>Ruta *
                            </label>
                            <input type="text" name="Ruta" id="Ruta" class="bg-gray-700 border border-gray-600 text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 placeholder-gray-400 transition-colors" placeholder="Ingrese la ruta" required="">
                        </div>
                    </div>
                </div>

                <!-- Botones del modal -->
                <div class="flex justify-end gap-3">
                    <button type="button" onclick="cerrarModal()" class="py-2.5 px-5 text-sm font-medium text-gray-300 focus:outline-none bg-gray-700 rounded-lg border border-gray-600 hover:bg-gray-600 hover:text-white focus:z-10 focus:ring-4 focus:ring-gray-700 transition-colors">
                        <i class="fas fa-times mr-2"></i>Cancelar
                    </button>
                    <button type="submit" class="text-white inline-flex items-center bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center transition-colors">
                        <i class="fas fa-save mr-2"></i>Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="~/js/pages/unidad.js"></script>

