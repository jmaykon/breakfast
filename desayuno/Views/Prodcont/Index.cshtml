@model desayuno.Models.Prodcont
@{
}

<!-- Contenido Principal -->
<div class="space-y-6">
    <!-- Header con título -->
    <div class="bg-gray-800 rounded-xl p-6 shadow-2xl border border-gray-700">
        <div class="flex items-center justify-between">
            <div class="flex items-center space-x-3">
                <div class="p-3 bg-blue-600 rounded-lg">
                    <i class="fas fa-boxes text-white text-xl"></i>
                </div>
                <div>
                    <h1 class="text-2xl font-bold text-white">Gestión de Productos Contabilizados</h1>
                    <p class="text-gray-400 text-sm">Un producto contable puede tener múltiples códigos SAP asociados</p>
                </div>
            </div>

            <!-- Botón Agregar Producto Contabilizado -->
            <button id="btnNuevoProdcont"
                    type="button"
                    class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-lg hover:bg-blue-700 focus:z-10 focus:ring-4 focus:ring-blue-300 transition-all duration-200 hover:scale-105 hover:shadow-lg">
                <i class="fas fa-plus mr-2"></i>
                Nuevo Producto Contabilizado
            </button>
        </div>
    </div>

    <!-- Vista de Productos Contabilizados -->
    <div id="productosContainer" class="space-y-4">
        <!-- Estado de carga inicial -->
        <div id="loadingState" class="bg-gray-800 rounded-xl shadow-2xl border border-gray-700 p-8">
            <div class="text-center text-gray-400">
                <i class="fas fa-spinner fa-spin text-3xl mb-4"></i>
                <p class="text-lg">Cargando productos contabilizados...</p>
            </div>
        </div>
    </div>
</div>

<!-- Modal Agregar/Editar Producto Contabilizado -->
<div id="modalRegistroProdcont" data-modal-backdrop="static" data-modal-keyboard="false" data="static" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-4xl max-h-full">
        <div class="relative bg-gray-800 rounded-lg shadow-2xl border border-gray-700">
            <!-- Modal header -->
            <div class="flex items-center justify-between p-4 md:p-5 border-b border-gray-600 rounded-t">
                <h3 id="titleModalProdcont" class="text-lg font-semibold text-white">
                    Nuevo Producto Contabilizado
                </h3>
                <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-600 hover:text-white rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center transition-colors" onclick="cerrarModal()">
                    <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
                    </svg>
                    <span class="sr-only">Cerrar modal</span>
                </button>
            </div>

            <!-- Modal body -->
            <form id="formularioProdcont" class="p-4 md:p-5">
                <input type="hidden" id="id" name="id">

                <div class="grid gap-6 mb-6">
                    <!-- Información del Producto Contable -->
                    <div class="bg-gray-700 rounded-lg p-4 border border-gray-600">
                        <h4 class="text-lg font-medium text-white mb-4 flex items-center">
                            <i class="fas fa-info-circle mr-2 text-blue-400"></i>
                            Información del Producto Contable
                        </h4>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <!-- Código Producto Contable -->
                            <div>
                                <label for="codProdCont" class="block mb-2 text-sm font-medium text-white">
                                    <i class="fas fa-barcode mr-2 text-blue-400"></i>Código de Producto Contable *
                                </label>
                                <input type="text" name="codProdCont" id="codProdCont" class="bg-gray-600 border border-gray-500 text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 placeholder-gray-400 transition-colors" placeholder="Ingrese el código del producto contable" required="">
                            </div>

                            <!-- Descripción Producto Contable -->
                            <div>
                                <label for="desProdCont" class="block mb-2 text-sm font-medium text-white">
                                    <i class="fas fa-align-left mr-2 text-blue-400"></i>Descripción de Producto Contable *
                                </label>
                                <input type="text" name="desProdCont" id="desProdCont" class="bg-gray-600 border border-gray-500 text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 placeholder-gray-400 transition-colors" placeholder="Ingrese la descripción del producto contable" required="">
                            </div>
                            <!-- Empresa/Asociación -->
                            <div class="md:col-span-2">
                                <label for="empProdCont" class="block mb-2 text-sm font-medium text-white">
                                    <i class="fas fa-building mr-2 text-blue-400"></i>Empresa/Asociación *
                                </label>
                                <input type="text" name="empProdCont" id="empProdCont" class="bg-gray-600 border border-gray-500 text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 placeholder-gray-400 transition-colors" placeholder="Ingrese la empresa o asociación" required="">
                            </div>
                        </div>
                    </div>

                    <!-- Códigos SAP Asociados -->
                    <div class="bg-gray-700 rounded-lg p-4 border border-gray-600">
                        <div class="flex items-center justify-between mb-4">
                            <h4 class="text-lg font-medium text-white flex items-center">
                                <i class="fas fa-cubes mr-2 text-green-400"></i>
                                Códigos SAP Asociados (Opcional)
                            </h4>
                            <span id="contadorSap" class="px-3 py-1 bg-green-600 text-white text-xs font-medium rounded-full">
                                0 códigos
                            </span>
                        </div>

                        <!-- Selector de productos SAP -->
                        <div class="mb-4">
                            <label for="codProdSapSelector" class="block mb-2 text-sm font-medium text-white">
                                <i class="fas fa-search mr-2 text-green-400"></i>Buscar y Agregar Código SAP
                            </label>
                            <div class="flex gap-2">
                                <div class="flex-1">
                                    <select class="select-prodcont-producto" id="codProdSapSelector" style="width: 100%;">
                                        <option value=""></option>
                                    </select>
                                </div>
                                <button type="button" id="btnAgregarSap" class="px-4 py-2 text-sm font-medium text-white bg-green-600 rounded-lg hover:bg-green-700 focus:ring-4 focus:ring-green-300 transition-all duration-200 hover:scale-105 disabled:opacity-50 disabled:cursor-not-allowed">
                                    <i class="fas fa-plus mr-1"></i>Agregar
                                </button>
                            </div>
                        </div>

                        <!-- Lista de códigos SAP seleccionados -->
                        <div class="bg-gray-600 rounded-lg p-4 border border-gray-500">
                            <h5 class="text-sm font-medium text-gray-300 mb-3 flex items-center">
                                <i class="fas fa-list mr-2"></i>Códigos SAP Seleccionados:
                            </h5>
                            <div id="listaSapSeleccionados" class="space-y-2">
                                <div class="text-gray-400 text-sm italic text-center py-4">
                                    <i class="fas fa-info-circle mr-2"></i>
                                    No hay códigos SAP seleccionados. Busque y agregue códigos SAP usando el selector de arriba.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Botones del modal -->
                <div class="flex justify-end gap-3">
                    <button type="button" onclick="cerrarModal()" class="py-2.5 px-5 text-sm font-medium text-gray-300 focus:outline-none bg-gray-700 rounded-lg border border-gray-600 hover:bg-gray-600 hover:text-white focus:z-10 focus:ring-4 focus:ring-gray-700 transition-colors">
                        <i class="fas fa-times mr-2"></i>Cancelar
                    </button>
                    <button type="submit" id="btnGuardar" class="text-white inline-flex items-center bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center transition-colors disabled:opacity-50 disabled:cursor-not-allowed">
                        <i class="fas fa-save mr-2"></i>Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/js/pages/prodcont.js"></script>